{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": ".",
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@lex/policy": ["../policy"],
      "@lex/policy/*": ["../policy/*"],
      "@lex/types": ["../types"],
      "@lex/types/*": ["../types/*"]
    }
  },
  "include": [
    "*.ts"
  ],
  "exclude": [
    "demo.ts",
    "perf-test.ts",
    "verify-format.ts"
  ],
  "references": [
    { "path": "../types" },
    { "path": "../policy" }
  ]
}
