{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@lex/aliases/types": ["../aliases/types"],
      "@lex/aliases/resolver": ["../aliases/resolver"]
    }
  },
  "include": ["*.ts"],
  "exclude": ["node_modules", "dist", "*.test.mjs", "*.test.ts"],
  "references": [
    { "path": "../aliases" }
  ]
}
