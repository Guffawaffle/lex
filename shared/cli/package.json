  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.11",
    "@types/inquirer": "^9.0.9",
    "@types/node": "^24.9.2",
    "@types/uuid": "^9.0.8",
    "typescript": "^5.9.3"
  },
  "keywords": [
    "cli",
    "lex",
    "memory",
    "policy",
    "frames"
