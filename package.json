{
  "name": "lex",
  "version": "0.2.0",
  "description": "Policy-aware work continuity with receipts. Unified LexBrain + LexMap.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./cli": "./dist/cli/index.js",
    "./policy/*": "./dist/policy/*",
    "./memory/*": "./dist/memory/*",
    "./shared/*": "./dist/shared/*"
  },
  "bin": {
    "lex": "./dist/shared/cli/lex.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc -b",
    "clean": "rimraf dist",
    "type-check": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "npx tsx --test 'src/**/*.test.{ts,mts}' && node --test 'src/**/*.test.mjs'",
    "test:integration": "npx tsx --test src/memory/integration.test.ts && node src/policy/integration.test.mjs",
    "test:benchmarks": "npx tsx --test src/memory/benchmarks.test.ts",
    "test:all": "npm test && npm run test:integration",
    "test:coverage": "npm run test",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "local-ci": "./scripts/local-ci-run.sh",
    "local-ci:nonet": "./scripts/ci-nonet.sh",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "npm run build && changeset publish"
  },
  "keywords": [
    "memory",
    "policy",
    "continuity",
    "mcp"
  ],
  "author": "Guffawaffle",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "better-sqlite3": "^12.4.1",
    "commander": "^12.0.0",
    "glob": "^11.0.3",
    "inquirer": "^9.2.0",
    "minimatch": "^10.1.1",
    "sharp": "^0.33.5",
    "shiki": "^3.15.0",
    "typescript": "^5.9.3",
    "uuid": "^9.0.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@types/better-sqlite3": "^7.6.11",
    "@types/inquirer": "^9.0.9",
    "@types/node": "^24.9.2",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.3",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.0",
    "tsx": "^4.20.6"
  }
}
