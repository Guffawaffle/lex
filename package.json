{
  "name": "lex",
  "version": "0.3.0",
  "description": "Policy-aware work continuity with receipts. Unified LexBrain + LexMap.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./cli": {
      "types": "./dist/shared/cli/index.d.ts",
      "import": "./dist/shared/cli/index.js"
    },
    "./policy/*": "./dist/policy/*",
    "./memory/*": "./dist/memory/*",
    "./shared/*": "./dist/shared/*"
  },
  "bin": {
    "lex": "./dist/shared/cli/lex.js"
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts",
    "dist/**/*.js.map",
    "!dist/**/*.tsbuildinfo",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "setup-local": "./scripts/setup-local.sh",
    "build": "tsc -b tsconfig.build.json",
    "clean": "tsc -b tsconfig.build.json --clean && rimraf dist",
    "type-check": "tsc -p tsconfig.build.json --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:baseline:check": "npx eslint . --format=json 2>&1 | grep -v '^>' > current-lint.json && node scripts/lint-budget.mjs current-lint.json lint-baseline.json && rm current-lint.json",
    "lint:baseline:update": "npx eslint . --format=json 2>&1 | grep -v '^>' > lint-baseline.json && echo 'Baseline updated. Please commit lint-baseline.json.'",
    "test": "npx tsx --test 'src/**/*.test.{ts,mts}' && node --test 'src/**/*.test.mjs'",
    "test:aliases": "node --test src/shared/aliases/substring.spec.mjs src/shared/aliases/collision.spec.mjs src/shared/aliases/case-sensitivity.spec.mjs src/shared/aliases/resolution.spec.mjs",
    "test:integration": "npx tsx --test src/memory/integration.test.ts && node src/policy/integration.test.mjs",
    "test:benchmarks": "npx tsx --test src/memory/benchmarks.test.ts",
    "test:all": "npm test && npm run test:integration",
    "test:coverage": "npm run test",
    "test:smoke": "./scripts/consumer-smoke-test.sh",
    "guard:no-js-src": "node ./scripts/check-no-js-in-src.mjs",
    "coverage": "c8 -r text -r lcov npm test",
    "check:coverage": "c8 --check-coverage --branches 60 --functions 60 --lines 60 --statements 60 npm test",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "local-ci": "./scripts/local-ci-run.sh",
    "local-ci:nonet": "./scripts/ci-nonet.sh",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "npm run build && changeset publish",
    "prepack": "npm run build",
	"prepare": "npm run build",
    "postbuild": "chmod +x dist/shared/cli/lex.js"
  },
  "keywords": [
    "memory",
    "policy",
    "continuity",
    "mcp"
  ],
  "author": "Guffawaffle",
  "license": "MIT",
  "engines": {
    "node": ">=20 <23"
  },
  "dependencies": {
    "better-sqlite3": "^12.4.1",
    "commander": "^12.0.0",
    "glob": "^11.0.3",
    "inquirer": "^12.10.0",
    "minimatch": "^10.1.1",
    "sharp": "^0.34.5",
    "shiki": "^3.15.0",
    "typescript": "^5.9.3",
    "uuid": "^13.0.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@types/better-sqlite3": "^7.6.11",
    "@types/inquirer": "^9.0.9",
    "@types/node": "^24.9.2",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "c8": "^10.1.3",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.0",
    "tsx": "^4.20.6"
  }
}
