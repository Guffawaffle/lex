{
  "name": "lex",
  "version": "0.2.0",
  "description": "Policy-aware work continuity with receipts. Unified LexBrain + LexMap.",
  "private": true,
  "type": "module",
  "workspaces": [
    "memory/*",
    "policy/*",
    "shared/*"
  ],
  "scripts": {
    "remember": "node memory/mcp_server/frame-mcp.mjs",
    "check": "node policy/check/lexmap-check.ts",
    "build": "npm run build:types && npm run build:module-ids && npm run build:aliases && npm run build:policy && npm run build:atlas && npm run build:git && npm run build:merge && npm run build:check && npm run build:store && npm run build:renderer && npm run build:mcp-server && npm run build:cli",
    "build:types": "cd shared/types && npx tsc",
    "build:module-ids": "cd shared/module_ids && npx tsc",
    "build:aliases": "cd shared/aliases && npx tsc",
    "build:policy": "cd shared/policy && npx tsc",
    "build:atlas": "cd shared/atlas && npx tsc",
    "build:git": "cd shared/git && npx tsc",
    "build:merge": "cd policy/merge && npx tsc",
    "build:check": "cd policy/check && npx tsc",
    "build:store": "cd memory/store && npx tsc",
    "build:renderer": "cd memory/renderer && npm run build",
    "build:mcp-server": "cd memory/mcp_server && npm run build",
    "build:cli": "cd shared/cli && npx tsc",
    "test": "npm run test:module-ids && npm run test:aliases && npm run test:policy && npm run test:atlas && npm run test:git && npm run test:merge && npm run test:check && npm run test:store && npm run test:renderer && npm run test:mcp-server && npm run test:cli",
    "test:module-ids": "cd shared/module_ids && node validator.test.mjs",
    "test:aliases": "cd shared/aliases && node resolver.test.mjs",
    "test:policy": "cd shared/policy && node loader.test.mjs",
    "test:atlas": "cd shared/atlas && node atlas-frame.test.mjs",
    "test:git": "cd shared/git && npm test",
    "test:merge": "cd policy/merge && npm test",
    "test:check": "cd policy/check && npm test",
    "test:store": "cd memory/store && npm test",
    "test:renderer": "cd memory/renderer && npm test",
    "test:mcp-server": "cd memory/mcp_server && npm test",
    "test:cli": "cd shared/cli && npm test",
    "test:integration": "npm run test:integration:memory && npm run test:integration:policy",
    "test:integration:memory": "cd memory && npx tsx --test integration.test.ts",
    "test:integration:policy": "cd policy && node integration.test.mjs",
    "test:benchmarks": "cd memory && npx tsx --test benchmarks.test.ts",
    "test:all": "npm test && npm run test:integration",
    "test:coverage": "npm run test",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "npm run build && changeset publish"
  },
  "bin": {
    "lex": "./shared/cli/dist/shared/cli/lex.js"
  },
  "keywords": [
    "memory",
    "policy",
    "continuity",
    "mcp"
  ],
  "author": "Guffawaffle",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.6.2"
  }
}
