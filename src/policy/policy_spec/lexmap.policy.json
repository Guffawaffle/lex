{
  "modules": {
    "patterns": [
      {
        "name": "indexer",
        "match": "src/policy/scanners/**"
      },
      {
        "name": "ts",
        "match": "src/**/*.ts"
      },
      {
        "name": "php",
        "match": "src/policy/scanners/php_scanner.py"
      },
      {
        "name": "mcp",
        "match": "src/memory/mcp_server/**"
      }
    ],
    "allowed_deps": []
  },
  "kill_patterns": [
    {
      "kind": "generated",
      "match": "**/dist/**"
    },
    {
      "kind": "vendor",
      "match": "**/node_modules/**"
    },
    {
      "kind": "vendor",
      "match": "**/vendor/**"
    }
  ],
  "heuristics": {
    "enable": true,
    "di_patterns": [],
    "confidence": {
      "hard": 0.95,
      "soft": 0.6
    }
  },
  "determinism_target": 0.95
}
