{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://guffawaffle.dev/schemas/lex/execution-plan-v1.json",
  "title": "Execution Plan v1",
  "description": "Schema for execution plan documents derived from feature specifications",
  "type": "object",
  "required": ["schemaVersion", "sourceSpec", "epic", "subIssues"],
  "additionalProperties": false,
  "properties": {
    "schemaVersion": {
      "type": "string",
      "description": "Version of the execution plan schema",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "sourceSpec": {
      "type": "object",
      "description": "The original feature specification",
      "required": ["schemaVersion", "title", "description", "repo"],
      "additionalProperties": false,
      "properties": {
        "schemaVersion": {
          "type": "string",
          "description": "Version of the feature spec schema"
        },
        "title": {
          "type": "string",
          "description": "Title of the feature"
        },
        "description": {
          "type": "string",
          "description": "Detailed description of the feature"
        },
        "acceptanceCriteria": {
          "type": "array",
          "description": "List of acceptance criteria",
          "items": {
            "type": "string"
          }
        },
        "technicalContext": {
          "type": "string",
          "description": "Technical context"
        },
        "repo": {
          "type": "string",
          "description": "Repository identifier"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 timestamp"
        }
      }
    },
    "epic": {
      "type": "object",
      "description": "The parent epic derived from the spec",
      "required": ["title", "description"],
      "additionalProperties": false,
      "properties": {
        "title": {
          "type": "string",
          "description": "Epic title"
        },
        "description": {
          "type": "string",
          "description": "Epic description"
        },
        "acceptanceCriteria": {
          "type": "array",
          "description": "Epic-level acceptance criteria",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "subIssues": {
      "type": "array",
      "description": "Sub-issues/tasks that implement the epic",
      "items": {
        "type": "object",
        "required": ["id", "title", "description", "type", "dependsOn"],
        "additionalProperties": false,
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique identifier for the sub-issue"
          },
          "title": {
            "type": "string",
            "description": "Sub-issue title"
          },
          "description": {
            "type": "string",
            "description": "Sub-issue description"
          },
          "type": {
            "type": "string",
            "enum": ["feature", "testing", "docs", "refactor", "bug"],
            "description": "Type of sub-issue"
          },
          "acceptanceCriteria": {
            "type": "array",
            "description": "Sub-issue acceptance criteria",
            "items": {
              "type": "string"
            }
          },
          "dependsOn": {
            "type": "array",
            "description": "IDs of sub-issues this depends on",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "createdAt": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp when the plan was created"
    }
  }
}
