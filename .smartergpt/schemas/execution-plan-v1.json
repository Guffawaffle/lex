{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://smartergpt.dev/schemas/lex/execution-plan-v1.json",
  "type": "object",
  "title": "Execution Plan v1",
  "description": "Project execution plan with Epic and Sub-Issues",
  "required": ["schemaVersion", "sourceSpec", "epic", "subIssues", "createdAt"],
  "additionalProperties": false,
  "properties": {
    "schemaVersion": {
      "type": "string",
      "const": "1.0.0",
      "description": "Schema version"
    },
    "sourceSpec": {
      "$ref": "#/definitions/FeatureSpecV0",
      "description": "Source Feature Spec v0"
    },
    "epic": {
      "type": "object",
      "required": ["title", "description", "acceptanceCriteria"],
      "additionalProperties": false,
      "properties": {
        "title": {
          "type": "string",
          "minLength": 1
        },
        "description": {
          "type": "string",
          "minLength": 1
        },
        "acceptanceCriteria": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string"
          }
        }
      }
    },
    "subIssues": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "title", "description", "type", "acceptanceCriteria", "dependsOn"],
        "additionalProperties": false,
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z0-9-]+$",
            "description": "Unique sub-issue identifier"
          },
          "title": {
            "type": "string",
            "minLength": 1
          },
          "description": {
            "type": "string",
            "minLength": 1
          },
          "type": {
            "type": "string",
            "enum": ["feature", "testing", "docs"],
            "description": "Sub-issue type"
          },
          "acceptanceCriteria": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string"
            }
          },
          "dependsOn": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Sub-issue IDs this depends on"
          }
        }
      }
    },
    "createdAt": {
      "type": "string",
      "format": "date-time"
    }
  },
  "definitions": {
    "FeatureSpecV0": {
      "type": "object",
      "required": ["schemaVersion", "title", "description", "acceptanceCriteria", "repo", "createdAt"],
      "additionalProperties": false,
      "properties": {
        "schemaVersion": { "type": "string", "const": "0.1.0" },
        "title": { "type": "string" },
        "description": { "type": "string" },
        "acceptanceCriteria": { "type": "array", "items": { "type": "string" } },
        "technicalContext": { "type": "string" },
        "constraints": { "type": "string" },
        "repo": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" }
      }
    }
  }
}
