{
  "gates": {
    "lint": {
      "name": "Linting",
      "command": "npm run lint",
      "timeout_seconds": 60,
      "required": true,
      "log_path": ".smartergpt.local/deliverables/_session/logs/lint-{pr_number}.log"
    },
    "typecheck": {
      "name": "Type Checking",
      "command": "npx tsc --noEmit",
      "timeout_seconds": 120,
      "required": true,
      "log_path": ".smartergpt.local/deliverables/_session/logs/typecheck-{pr_number}.log"
    },
    "unit-test": {
      "name": "Unit Tests",
      "command": "npm test",
      "timeout_seconds": 300,
      "required": true,
      "log_path": ".smartergpt.local/deliverables/_session/logs/unit-test-{pr_number}.log"
    },
    "determinism": {
      "name": "Build Determinism",
      "command": "npm run build && git diff --exit-code",
      "timeout_seconds": 180,
      "required": true,
      "log_path": ".smartergpt.local/deliverables/_session/logs/determinism-{pr_number}.log"
    }
  }
}
